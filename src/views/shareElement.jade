.modal-header
    .modal-title
        | {{data.name}}
.modal-body
    input(type="text" ng-model="userGroups" placeholder="Search for user groups")
    p(style="font-size 12px")
        i Created {{ (data.user ? "by " + data.user.name + " " : "")}} at {{data.created | date}}
    table.table
        tr
            td.text-left External access (without login)
            td.text-right {{ metaData.meta.allowExternalAccess}}
        tr
            td.text-left Public access (with login)
            td.text-right {{metaData.meta.allowPublicAccess}}
        tr
            td.text-left Feedback Message Recipients
            td.text-right {{data.userGroupAccesses}}
.modal-footer
    button.btn.btn-primary.pull-right(ng-click="save()") Save
    button.btn.btn-danger.pull-right(ng-click="cancel()") Cancel